{
  "name": "sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.ts",
    "clean": "ts-node ./scripts/clean",
    "eslint": "eslint ./packages --ext .js,.jsx,.ts,.tsx --fix",
    "tslint": "tslint --project ./ --fix",
    "flow:check": "flow check",
    "lerna:install": "lerna bootstrap --force-local",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-do-expressions": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@sweet/milktea-cli": "github:duan602728596/sweet#build-milktea-cli",
    "@sweet/util-tools": "github:duan602728596/sweet#build-util-tools",
    "@types/koa": "^2.0.48",
    "@types/node": "^11.9.5",
    "@types/webpack": "^4.4.24",
    "babel-eslint": "^11.0.0-beta.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "^0.93.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
