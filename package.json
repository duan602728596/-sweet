{
  "name": "sweet",
  "description": "🍩一个webpack、vite的开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "type": "module",
  "scripts": {
    "build": "npm run clean && NODE_OPTIONS=\"--experimental-json-modules\" gulp --gulpfile ./scripts/build.mjs",
    "clean": "node ./scripts/clean.mjs",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "update-version": "milktea-esm update",
    "update-version:dev": "milktea-esm update --__DEV__",
    "prepare": "husky install"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.0.2",
  "engines": {
    "pm": "yarn@^3.0.2"
  },
  "dependencies": {
    "@types/babel__core": "^7",
    "@types/eslint": "^7",
    "@types/estree": "^0",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^16",
    "@types/sockjs": "^0",
    "@types/yargs": "^17",
    "glob": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-modifier": "^1.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "^3.1.1",
    "@sweet-milktea/util-tools": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-react": "^7.26.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "mocha": "^9.1.1"
  },
  "optionalDependencies": {
    "imagemin-gif2webp": ">=3",
    "imagemin-gifsicle": ">=7",
    "imagemin-jpegoptim": ">=7",
    "imagemin-pngquant": ">=9",
    "imagemin-webp": ">=6",
    "sharp": ">=0"
  },
  "lint-staged": {
    "**/*.{js,jsx,mjs,cjs,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
