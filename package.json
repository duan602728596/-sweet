{
  "name": "sweet",
  "description": "一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.ts",
    "clean": "ts-node ./scripts/clean",
    "eslint": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "tslint": "tslint --project ./ --fix",
    "lerna:install": "lerna bootstrap --force-local",
    "case-check": "case-check --dir=\"./\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__"
  },
  "devDependencies": {
    "@sweet-milktea/milktea-cli": "^0.3.5",
    "@sweet-milktea/util-tools": "^0.3.6",
    "@types/koa": "^2.0.49",
    "@types/node": "^12.6.8",
    "@types/request": "^2.48.2",
    "@types/webpack": "^4.4.35",
    "babel-eslint": "^10.0.2",
    "commitizen": "^3.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "es-module-path-case-check": "^1.4.0",
    "eslint": "^6.0.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^3.0.1",
    "lerna": "^3.16.0",
    "lint-staged": "^9.2.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
