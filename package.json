{
  "name": "sweet",
  "description": "🍩一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.js",
    "clean": "node ./scripts/clean",
    "eslint": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "lerna:install": "lerna bootstrap --force-local",
    "case-check": "case-check --dir=\"./\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__",
    "docs:init": "sb init --type react",
    "docs:start": "cross-env NODE_ENV=development start-storybook -p 5060",
    "docs:build": "npm run clean:docs && cross-env NODE_ENV=production build-storybook",
    "clean:docs": "rimraf storybook-static"
  },
  "dependencies": {
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addon-notes": "^5.2.1",
    "@storybook/cli": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@types/koa": "^2.0.50",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.11",
    "@types/request": "^2.48.3",
    "@types/webpack": "^4.39.2",
    "github-markdown-css": "^3.0.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "lerna": "^3.16.4",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-markdown": "^4.2.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@sweet-milktea/milktea-cli": "^0.6.0",
    "@sweet-milktea/util-tools": "^0.5.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "es-module-path-case-check": "^1.4.0",
    "eslint": "^6.5.1",
    "eslint-plugin-react": "^7.15.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "tslint": "^5.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
