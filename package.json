{
  "name": "sweet",
  "description": "🍩一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.js",
    "clean": "node ./scripts/clean",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "updateVersion": "milktea update",
    "updateVersion:dev": "milktea update --__DEV__"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/eslint": "^7",
    "@types/estree": "^0",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^14",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@babel/register": "^7.13.8",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "*",
    "@sweet-milktea/util-tools": "*",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chai": "^4.3.3",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "mocha": "^8.3.1"
  },
  "optionalDependencies": {
    "imagemin-gif2webp": ">=3",
    "imagemin-gifsicle": ">=7",
    "imagemin-jpegoptim": ">=7",
    "imagemin-pngquant": ">=9",
    "imagemin-webp": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
