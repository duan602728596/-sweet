{
  "name": "sweet",
  "description": "🍩一个webpack、vite的开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:packages && zx scripts/build.mjs",
    "build:packages": "lerna run build:esm --concurrency 4 && lerna run build:cjs --concurrency 4",
    "clean": "node ./scripts/clean.mjs",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "update-version": "milktea-esm update",
    "update-version:dev": "milktea-esm update --__DEV__",
    "postinstall": "husky install"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.3.1",
  "dependencies": {
    "@types/babel__core": "^7",
    "@types/eslint": "^8",
    "@types/estree": "^1",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^18",
    "@types/sockjs": "^0",
    "@types/yargs": "^17",
    "lerna": "^6.4.1",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "zx": "^7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "*",
    "@sweet-milktea/util-tools": "*",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0"
  },
  "optionalDependencies": {
    "imagemin-gif2webp": ">=3",
    "imagemin-gifsicle": ">=7",
    "imagemin-jpegoptim": ">=8",
    "imagemin-pngquant": ">=9",
    "imagemin-webp": ">=7",
    "sharp": ">=0"
  },
  "lint-staged": {
    "**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
