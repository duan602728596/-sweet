{
  "name": "sweet",
  "description": "🍩一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.js",
    "clean": "node ./scripts/clean",
    "eslint": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "eslint:no-fix": "eslint ./ --ext .js,.jsx,.ts,.tsx",
    "lerna:install": "lerna bootstrap --force-local",
    "case-check": "case-check --dir=\"./\" --css --ext=\"md\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__",
    "docs:init": "sb init --type react",
    "docs:start": "cross-env NODE_ENV=development start-storybook -p 5060",
    "docs:build": "npm run clean:docs && cross-env NODE_ENV=production build-storybook",
    "clean:docs": "rimraf storybook-static"
  },
  "private": true,
  "workspaces": ["packages/*"],
  "dependencies": {
    "@storybook/addon-actions": "^5.3.9",
    "@storybook/addon-links": "^5.3.9",
    "@storybook/addon-notes": "^5.3.9",
    "@storybook/cli": "^5.3.9",
    "@storybook/react": "^5.3.9",
    "@types/html-minifier": "^3",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^13",
    "@types/request": "^2",
    "@types/webpack": "^4",
    "github-markdown-css": "^3.0.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^3.20.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.3.1",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@sweet-milktea/milktea-cli": "*",
    "@sweet-milktea/util-tools": "*",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-eslint": "^11.0.0-beta.2",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "es-module-path-case-check": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
