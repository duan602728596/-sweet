{
  "name": "sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.ts",
    "clean": "ts-node ./scripts/clean",
    "eslint": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "tslint": "tslint --project ./ --fix",
    "lerna:install": "lerna bootstrap --force-local",
    "copy": "ts-node ./scripts/copy",
    "case-check": "case-check --dir=\"./\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__"
  },
  "devDependencies": {
    "@sweet/milktea-cli": "github:duan602728596/sweet#build-milktea-cli",
    "@sweet/util-tools": "github:duan602728596/sweet#build-util-tools",
    "@types/koa": "^2.0.48",
    "@types/node": "^12.0.3",
    "@types/request": "^2.48.1",
    "@types/webpack": "^4.4.32",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "es-module-path-case-check": "^1.4.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "fs-extra": "^8.0.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "rimraf": "^2.6.3",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
