{
  "name": "sweet",
  "description": "🍩一个webpack、vite的开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:ts && gulp --gulpfile ./scripts/build.mjs",
    "build:ts": "zx scripts/buildTs.mjs",
    "clean": "node ./scripts/clean.mjs",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "update-version": "milktea-esm update",
    "update-version:dev": "milktea-esm update --__DEV__",
    "prepare": "husky install"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@types/babel__core": "^7",
    "@types/eslint": "^8",
    "@types/estree": "^0",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^17",
    "@types/sockjs": "^0",
    "@types/yargs": "^17",
    "gulp": "^4.0.2",
    "gulp-modifier": "^1.0.1",
    "lerna": "^5.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3",
    "zx": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/eslint-parser": "^7.18.2",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "^3.1.1",
    "@sweet-milktea/util-tools": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4.3.6",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0"
  },
  "optionalDependencies": {
    "imagemin-gif2webp": ">=3",
    "imagemin-gifsicle": ">=7",
    "imagemin-jpegoptim": ">=7",
    "imagemin-pngquant": ">=9",
    "imagemin-webp": ">=6",
    "sharp": ">=0"
  },
  "lint-staged": {
    "**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
