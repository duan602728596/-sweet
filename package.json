{
  "name": "sweet",
  "description": "🍩一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.js",
    "clean": "node ./scripts/clean",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "case-check": "case-check --dir=\"./\" --css --ext=\"md\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/eslint": "^7",
    "@types/estree": "^0",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^14",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "*",
    "@sweet-milktea/util-tools": "*",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "commitizen": "^4.2.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "es-module-path-case-check": "^1.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "lodash": "^4.17.20",
    "mocha": "^8.2.0"
  },
  "optionalDependencies": {
    "imagemin-gif2webp": ">=3",
    "imagemin-gifsicle": ">=7",
    "imagemin-jpegoptim": ">=7",
    "imagemin-pngquant": ">=9",
    "imagemin-webp": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
