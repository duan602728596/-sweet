{
  "name": "sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.ts",
    "clean": "ts-node ./scripts/clean",
    "eslint": "eslint ./packages",
    "tslint": "tslint --project ./",
    "flow:check": "flow check",
    "lerna:install": "npm run lerna:link && npm run lerna:bootstrap",
    "lerna:link": "lerna link --force-local",
    "lerna:bootstrap": "lerna bootstrap --force-local",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__"
  },
  "devDependencies": {
    "@sweet/milktea-cli": "github:duan602728596/sweet#build-milktea-cli",
    "@sweet/util-tools": "github:duan602728596/sweet#build-util-tools",
    "@types/koa": "^2.0.48",
    "@types/node": "^11.9.3",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-plugin-flowtype": "^3.4.1",
    "flow-bin": "^0.93.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.11.1",
    "lint-staged": "^8.1.3",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
