{
  "name": "@sweet-milktea/react-demo",
  "scripts": {
    "dll": "milktea dll",
    "start": "npm run clean && npm run clean:server && cross-env NODE_ENV=development milktea start --server --serverRender",
    "build": "npm run clean && npm run clean:server && cross-env NODE_ENV=production milktea build --serverRender",
    "clean": "rimraf ./dist",
    "clean:server": "rimraf ./dist-server",
    "server": "milktea server --serverRender",
    "server:pm2": "pm2 start runServer.js",
    "eslint": "eslint ./ --fix",
    "case-check": "case-check --dir=\"./\" --css",
    "update": "milktea update"
  },
  "dependencies": {
    "@sweet-milktea/milktea-cli": "^0.6.0",
    "@sweet-milktea/server": "^0.6.0",
    "@sweet-milktea/server-log": "^0.3.9",
    "antd": "^3.23.6",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "core-js": "^3.2.1",
    "immutable": "^4.0.0-rc.12",
    "node-cmd": "^3.0.0",
    "pm2": "^3.5.1",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-helmet": "^5.2.1",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "source-map-support": "^0.5.13"
  },
  "devDependencies": {
    "@sweet-milktea/milktea": "^0.6.0",
    "@sweet-milktea/util-tools": "^0.5.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.12.2",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "es-module-path-case-check": "^1.4.0",
    "eslint": "^6.5.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
