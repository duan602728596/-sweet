{
  "name": "sweet",
  "description": "🍩一个webpack开发和生产环境的通用配置解决方案。",
  "license": "MIT",
  "homepage": "https://github.com/duan602728596/sweet",
  "scripts": {
    "build": "npm run clean && gulp --gulpfile ./scripts/build.js",
    "clean": "node ./scripts/clean",
    "eslint": "eslint ./ --fix",
    "eslint:no-fix": "eslint ./",
    "lerna:install": "lerna bootstrap --force-local",
    "case-check": "case-check --dir=\"./\" --css --ext=\"md\"",
    "update": "milktea update",
    "update:dev": "milktea update --__DEV__",
    "docs:init": "sb init --type react",
    "docs:start": "cross-env NODE_ENV=development start-storybook --config-dir docs -p 5060",
    "docs:build": "npm run clean:docs && cross-env NODE_ENV=production build-storybook --config-dir docs",
    "clean:docs": "rimraf storybook-static"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@storybook/cli": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@types/eslint": "^7",
    "@types/estree": "^0",
    "@types/koa": "^2",
    "@types/lodash": "^4",
    "@types/node": "^14",
    "github-markdown-css": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lerna": "^3.22.1",
    "react": "^17.0.0-rc.3",
    "react-dom": "^17.0.0-rc.3",
    "react-markdown": "^4.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/eslint-parser": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@sweet-milktea/eslint-plugin": "*",
    "@sweet-milktea/milktea-cli": "*",
    "@sweet-milktea/util-tools": "*",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "es-module-path-case-check": "^1.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-react": "^7.21.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "lodash": "^4.17.20",
    "mocha": "^8.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
